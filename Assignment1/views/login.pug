extends layout

block content
    -data = data || {}
    div(class='auth')
        h1="Please Login"
        form(action="./login" method="POST" class="authForm")
            label(for="username") Username:
            input(
                type="text"
                id="username"
                name="username"
                value=data.username
            )

            label(for="password") Password:
            input(
                type="password"
                id="password"
                name="password"
                value=data.password
            )

            input(type="submit" value="Login!")

            if errors
                ul
                    for error in errors
                        li(class='error')= error.msg

        h4='If you do not have a user, you can '
            a(href='/auth/registration') register here
