extends layout

block content
    -data = data || {}
    div(class='auth')
        h1='New user? Register below!'
        form(action="./registration" method="POST" class='authForm')
            label(for="username") Username:
            input(
                type="text"
                id="username"
                name="username"
                value=data.username
            )

            label(for="password") Password:
            input(
                type="password"
                id="password"
                name="password"
                value=data.password
            )

            label(for="confirmPassword") Confirm Password:
            input(
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                value=data.confirmPassword
            )

            input(type="submit" value="Register!")

            if errors
                ul
                    for error in errors
                        li(class='error')= error.msg

        h4='Already have a user? '
            a(href='/auth/login') Login here!